# Base editorconfig for new projects

root = true

[*]
end_of_line = lf
indent_style = space
tab_width = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = tab
indent_size = 4

[*.{html,scss,css}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
